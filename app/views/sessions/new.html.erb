<h1 class="title">Login</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4 login_form">
    <%= form_for(:session, url: login_path) do |f| %>
    
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "form_control" %>

      <%= f.label :password, "パスワード" %>
      <%= link_to "パスワードを忘れた", new_password_reset_path %>
      <%= f.password_field :password, class: "form_control" %>
      
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>ログインを記憶する</span>
      <% end %> 
        
      <%= f.submit "login", class: "btn btn-default" %>
    <% end %>
    <h4>もしくは<%= link_to "新規登録", signup_path %></h4>
  </div>
</div>